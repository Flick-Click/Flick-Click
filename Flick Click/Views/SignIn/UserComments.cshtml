@model IEnumerable<Flick_Click.Models.UserCommetModel>

@{
    ViewBag.Title = "UserComments";
}

<h1>Your Comments</h1>
<hr />

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-12">
            @Html.DisplayFor(modelItem => item.Created)

        </div>
        <div class="col-12">
            @Html.DisplayFor(modelItem => item.Title)
        </div>
        <hr />
        <div class="col-12">
            @Html.DisplayFor(modelItem => item.Content)

        </div>
        <hr />
        <div class="col-12">
            <p>@Html.ActionLink("Edit", "EditComment", "Movie", new { id = item.ID }, null) | @Html.ActionLink("Details", "MovieDetails", "Movie", new { id = item.MovieID }, FormMethod.Get) | @Html.ActionLink("Delete", "Deletecomment", new { item.ID })</p>
        </div>
        <hr />
    </div>
    


}

