@model IEnumerable<Flick_Click.Models.UserCommetModel>

@{
    ViewBag.Title = "UserComments";
}

<h1>Your Comments</h1>
<hr />

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-12">
            @Html.DisplayFor(modelItem => item.Created)

        </div>
        <div class="col-12">
            @Html.DisplayFor(modelItem => item.Title)
        </div>
        <hr />
        <div class="col-12">
            @Html.DisplayFor(modelItem => item.Content)

        </div>
        <hr />
        <div class="col-12">
            <p>@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })</p>
        </div>
        <hr />
    </div>
    


}

