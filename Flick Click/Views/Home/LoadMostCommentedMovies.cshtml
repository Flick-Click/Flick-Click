@model IEnumerable<Flick_Click.Models.MovieModel>

@{
    ViewBag.Title = "LoadMostCommentedMovies";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/Content/CSS/Home.css" />
</head>

<div class="row">
    <p style="float:left">Most commented</p>
    <p style="float:right">@Html.ActionLink("See All", "MostCommentedMovie", "Movie")</p>
</div>
<br />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-2">
            
                <div class="imageContainer">

                    <img class="movie-img" src="@item.Img" />
                    <div class="overlay">
                    </div>

                    <div class="overlay2">
                        <div class="textred">Go to Movie</div>
                        <div class="playbtnImg">
                            <a href="@Url.Action("MovieDetailsTest", "Movie", new { id = item.ID }, null)">
                                <img style="width:50%;" src="~/Content/Pictures/play-btn.png" />
                            </a>
                        </div>
                        <div class="textwhite">@item.Title</div>
                    </div>

                </div>
            
            <div class="Countcontainer">
                <div>@item.CommentCount</div>
            </div>
        </div>
    }
</div>