<body>
    <div class="view-container">
        <div class="navbar navbar-inverse navbar-static-top navbar-Background navbar-Link-color-white text-color-white">
            <div class="row">
                <div class="col-12 reset-padding">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 reset-padding">
                            <a href="https://localhost:44355/" style="float: left">
                                <img src="~/Content/Pictures/logo.png" />
                            </a>
                        </div>
                        <div class="col-md-6 col-sm-12 reset-padding align-items-center">
                            <ul class="nav float-md-right fill-the-height">
                                <li class="nav-link active align-content-center">
                                    <b>@Html.ActionLink("HOME", "Index", "Home")</b>
                                </li>
                                <li class="nav-link">
                                    <b>@Html.ActionLink("NEWS", "News", "News")</b>
                                </li>
                                <li class="nav-link">
                                    <b>@Html.ActionLink("CONTACT", "Contact", "Contact")</b>
                                </li>
                                @{
                                    if (Session["Group_ID"] != null)
                                    {
                                        var Group = Session["Group_ID"].ToString();

                                        if (Group == "2")
                                        {
                                            <li class="nav-link">
                                                <b>@Html.ActionLink("ADMINISTRATION", "Index", "Administration")</b>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-12 reset-padding border-dashed-white navbar-midel">
                        <dív class="row">
                            <div class="col-md-6 col-sm-12 reset-padding">
