                                    </li>
                                    <li class="nav-link">
                                        <b>@Html.ActionLink("LATEST MOVIES", "LatestMovies", "Movie")</b>
                                    </li>
                                    <li class="nav-link">
                                        <b>@Html.ActionLink("MOST COMMENTED", "MostCommentedMovie", "Movie")</b>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6 col-sm-12 reset-padding text-md-right">
                                @Html.Action("Search", "Search")
                            </div>
                        </dív>
                    </div>
                    <div class="col-12 reset-padding">
                        <div class="row">
                            <div class="col-12 reset-padding bottom-padding">
                                <ul class="nav float-md-right">
                                    @{
                                        if (Session["userID"] == null)
                                        {
                                            <li class="nav-item ">
                                                <b>@Html.Action("SignIn", "SignIn")</b>

                                            </li>
                                            <li class="nav-item">
                                                <button class="fill-the-height b1 tekstColor-white">@Html.ActionLink("Not a member?", "SignUp", "SignUp")</button>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="nav-item ">
                                                <p class="text-color-white search-text" style="margin-bottom: 0px;">Welcome @Session["firstName"].ToString() @Session["lastName"].ToString()</p>
                                            </li>
                                            <li class="nav-item">
                                                <button class="fill-the-height b1 tekstColor-white">@Html.ActionLink("Logout", "Logout", "SignIn")</button>
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

